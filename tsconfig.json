{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "types": ["node"],
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "lib": ["es2018", "dom"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "paths": {
      "@home/*": ["src/app/modules/home/*"],
      "@vaga/*": ["src/app/modules/vaga/*"],
      "@erro/*": ["src/app/modules/erro/*"],
      "@interceptors/*": ["src/app/core/interceptors/*"],
      "@service/*": ["src/app/core/services/*"],
      "@env/*": ["src/environments/*"],
      "@config/*": ["src/app/config/*"],
      "@shared/*": ["src/app/shared/*"],
      "@app/*": ["src/app/*"]
    }
  }
}
